{
  "include": [ 
    "libs", 
    "projects/**/*.vue",
    "projects/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@letao/utils": ["./libs/utils/index.ts"],
      "@letao/types": ["./libs/utils/index.d.ts"]
    },
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable"
    ],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "verbatimModuleSyntax": true
  }
}
