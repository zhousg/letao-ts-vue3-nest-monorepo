{
  "include": ["libs", "projects/**/*.vue", "projects/**/*.ts", "projects/**/*.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@letao/utils": ["./libs/utils/index.ts"],
      "@letao/types": ["./libs/types/index.d.ts"]
    },
    "lib": ["ES2016", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "verbatimModuleSyntax": true,
    "declaration": true
  }
}
